@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Aplikasi CRUD Sederhana</h1>
</div>
<h3>Daftar Akun</h3>
<br />
<div class="form-group">
    <div class="col-md-10">@ViewBag.Message</div>
</div>
@using (Html.BeginForm())
{
<form action="/Home/index" method="post">
    <div class="form-group">
        <label>Username : </label>
        <input class="form-control" name="Nama" placeholder="Enter Name" />
    </div>
    <div class="form-group">
        <label>Password : </label>
        <input class="form-control" name="Password" placeholder="Enter Password" type="password" />
    </div>
    <div class="button">
        <input type="submit" value="Daftar" />
        <a href="@Url.Action("Login", "Home")">Login</a>
    </div>
  
</form>



}
